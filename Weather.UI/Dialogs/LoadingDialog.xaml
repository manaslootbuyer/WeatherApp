<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<dialogs:LoadingDialogXaml  xmlns:dialogs="clr-namespace:Weather.UI.Dialogs"
                            xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                             xmlns:dialogModels="clr-namespace:Weather.Core.DialogModels;assembly=Weather.Core"
                             x:Class="Weather.UI.Dialogs.LoadingDialog"
                             x:DataType="dialogModels:LoadingDialogModel"
                             Color="Transparent"
                             Size="300,200">
    <Frame Background="{DynamicResource White}"
           BorderColor="Transparent">
        <VerticalStackLayout Spacing="20" VerticalOptions="Center">
                <Label Text="{Binding Message}"
                       HorizontalTextAlignment="Center"
                       VerticalOptions="Center"/>
                <ActivityIndicator IsRunning="True"
                                   Color="{DynamicResource MaxColor}"/>
        </VerticalStackLayout>
    </Frame>
</dialogs:LoadingDialogXaml>